@page
@model Papere.Pages.EditModel
@{
    ViewData["title"] = "Edit";
}
<h4>Modifica</h4>
<br />
<form method="post">
    <input type="hidden" asp-for="@Model.papera.Id" value="@Model.papera.Id"/>

    <p>Nome</p>
    <input type="text" asp-for="@Model.papera.Nome" value="@Model.papera.Nome"/>
    <span asp-validation-for="@Model.papera.Nome" class="text-danger"></span>

    <p>Ali</p>
    <input type="number" asp-for="@Model.papera.Ali" value="@Model.papera.Ali"/>
    <span asp-validation-for="@Model.papera.Ali" class="text-danger"></span>

    <input type="submit" value="Modifica" />
</form>
